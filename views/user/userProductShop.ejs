        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2><%=categoryName%></h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span><%=categoryName%></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
